{
    "version": 2,
    "builds": [
      { "src": "client/package.json", "use": "@vercel/node" },
      { "src": "server/dist/main.js", "use": "@vercel/node" }
    ],
    "routes": [
      {
        "src": "/api/(.*)",
        "dest": "server/dist/main.js"
      },
      {
        "src": "/(.*)",
        "dest": "client/$1"
      }
    ]
  }
  